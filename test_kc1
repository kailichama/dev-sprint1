def countdown(n):
    if n <= 0:
        print 'Blastoff!'
    else:
        print n
        countdown(n-1)
countdown(5)

#exercise 5.2
def do_n(s, n):
    if n < 2:
       print "haha"
    else:   
       print s
       do_n(s,n-1)
do_n("hello", 3)


